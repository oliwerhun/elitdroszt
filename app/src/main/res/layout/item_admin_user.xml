<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_card"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/admin_username_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="002 - ABC-123 (Taxi)"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/admin_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pending"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@color/button_amber"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/approve_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jóváhagy"
                android:textSize="12sp"
                android:textColor="@color/button_green"/>

            <Button
                android:id="@+id/suspend_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Felfüggeszt"
                android:textSize="12sp"
                android:textColor="@color/button_amber"/>

            <Button
                android:id="@+id/role_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adminná tesz"
                android:textSize="12sp"
                android:textColor="@color/button_blue"/>

            <CheckBox
                android:id="@+id/see_213_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="213"
                android:textSize="12sp"/>

            <ImageButton
                android:id="@+id/delete_user_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/delete_24px"
                app:tint="@color/button_red"
                xmlns:app="http://schemas.android.com/apk/res-auto"/>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>